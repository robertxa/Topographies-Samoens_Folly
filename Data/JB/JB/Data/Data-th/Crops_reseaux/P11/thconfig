 source P11.th
 source P11.th2
 source P11-coupe.th2 
 # Add config file
#input ../../../config.thc
#input config.thc
input ../../../../../../config.thc 

  
 layout xviexport
   scale 1 1000
   grid-size 10 10 10 m
   grid bottom
 endlayout
  
 layout my_layout
 
	# Call the config settings (Layout config inside the config.thc file)
	copy drawingconfig
	copy headerl
  
	doc-title "Gouffre Jean-Bernard - Plafonds du P11"
	doc-author "Xavier Robert"
	cs UTM32
	base-scale 1 1000
	scale 1 500
	scale-bar 50 m
	#rotate 2.25
	#origin 12 22 0 m
	#origin-label 100 K
	#color map-bg 85
	color map-fg [100 100 80]
	#color map-fg altitude
	transparency on
	opacity 75
	language fr
	map-comment "Plafonds du P11, plan, Samoëns, 74, France"
	statistics explo-length off
	statistics topo-length off
	statistics copyright all
	legend off
	legend-width 18 cm
	map-header 0 00 nw
	map-header-bg off
	layers on
	#debug station-names 
	# grid bottom
	# grid-size 100 100 100 m
	grid off
  
  
	# To change the Title          
	code tex-map
  		\edef\temp{\the\cavename}   % cavename from Therion
		\edef\nostring{}            % empty string
		\ifx\temp\nostring          % test if cavename is empty
			% if empty reassign cavename to describe selected maps as a group
			\cavename={Gouffre Jean-Bernard} 		
		\else % if not empty keep the value set by therion, or assign an override cavename here
		\fi
		\newtoks\club \club={Groupe Spéléologique Vulcain}
	endcode  

endlayout
 
layout my_layout-coupe
	# Call the config settings (Layout config inside the config.thc file)
	copy drawingconfig
	copy header_coupe
  
	doc-title "Gouffre Jean-Bernard - Plafonds du P11"
	doc-author "Xavier Robert"
	cs UTM32
	base-scale 1 1000
	scale 1 500
	scale-bar 50 m
	#rotate 2.25
	#origin 12 22 0 m
	#origin-label 100 K
	#color map-bg 85
	color map-fg [100 100 80]
	transparency on
	opacity 75
	language fr
	map-comment "Plafonds du P11, coupe développée, Samoëns, 74, France"
	statistics explo-length off
	statistics topo-length off
	statistics copyright all
	legend off
	legend-width 16 cm
	map-header 0 0 nw
	map-header-bg off
	layers on
	# grid bottom
	# grid-size 100 100 100 m
	grid off   
  
 	# To change the Title          
	code tex-map
  		\edef\temp{\the\cavename}   % cavename from Therion
		\edef\nostring{}            % empty string
		\ifx\temp\nostring          % test if cavename is empty
			% if empty reassign cavename to describe selected maps as a group
			\cavename={Gouffre Jean-Bernard} 		
		\else % if not empty keep the value set by therion, or assign an override cavename here
		\fi
		\newtoks\club \club={Groupe Spéléologique Vulcain}
	endcode  

 endlayout

 
  
 export map -fmt xvi -layout xviexport -o P11-2016.xvi
 export map -projection extended -fmt xvi -layout xviexport -o P11-coupe-2016.xvi
  
 export map  -projection plan -o P11-2016-plan.pdf -layout my_layout
 export map -projection extended -layout my_layout-coupe -o P11-2016-coupe.pdf
 export model -o P11-2016.lox
